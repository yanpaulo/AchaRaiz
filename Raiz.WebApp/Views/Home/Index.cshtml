@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Acha Raízes</h1>
    <p class="lead">Encontre raízes facilmente!</p>

</div>

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.Label("f(x): ", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBox("expression", string.Empty, new { @class = "form-control" })
            @Html.ValidationMessage("expression")
        </div>
        @Html.Label("A: ", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBox("a", string.Empty, new { @class = "form-control" })
            @Html.ValidationMessage("a")
        </div>
        @Html.Label("B: ", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBox("b", string.Empty, new { @class = "form-control" })
            @Html.ValidationMessage("b")
        </div>
    </div>

		foreach (var item in ViewBag.Saida as string[])
        {
            @Html.Encode(item) <br/>
    }
    <input type="submit" class="btn btn-default" name="Calcular" value="Calcular" />
}

